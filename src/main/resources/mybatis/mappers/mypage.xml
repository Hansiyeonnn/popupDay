    <select id="getReviewCount" resultType="Long" parameterType="Long">
        select count(*) from review_tbl join user_tbl on review_tbl.user_id = user_tbl.id
        where review_tbl.user_id=#{user_id} group by review_tbl.user_id
    </select>

