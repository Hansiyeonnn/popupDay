<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="flower.popupday.search.dao.SearchDAO">
    <!-- hash_tag_tbl -->
    <resultMap type="flower.popupday.search.dto.SearchDTO" id="SeaResult">
        <result property="hash_tag_id" column="hash_tag_id"/>
        <result property="hash_tag" column="hash_tag"/>
    </resultMap>

    <select id="searchHashTags" resultType="flower.popupday.search.dto.SearchDTO" parameterType="string">
        SELECT * FROM hash_tag_tbl WHERE hash_tag LIKE CONCAT('%', #{query}, '%')
    </select>
</mapper>
